<html>
  <body>
    <div class="container">
      <div class="item">1</div>
      <div class="item">2</div>
      <div class="item">3</div>
      <div class="item">4</div>
    </div>
  </body>
</html>

<style>
  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    gap: 10px 10px;
  }

  .item {
    background-color: #f1f1f1;
    padding: 20px;
    font-size: 30px;
    text-align: center;
  }

  .item:nth-child(1) {
    grid-area: 1 / 1 / 2 / 2;
    grid-column: 1 / 1;
    grid-row: 1 / 1;
  }

  .item:nth-child(2) {
    grid-area: 1 / 2 / 2 / 3;
    grid-column: 2 / 2;
    grid-row: 1 / 3;
  }

  .item:nth-child(3) {
    grid-area: 2 / 1 / 3 / 2;
    grid-column: 1 / 1;
    grid-row: 2 / 2;
  }

  .item:nth-child(4) {
    grid-area: 3 / 1 / 4 / 2;
    grid-column: 1 / 3;
    grid-row: 3 / 3;
  }

  * {
    background-color: darkslategrey;
  }
</style>
