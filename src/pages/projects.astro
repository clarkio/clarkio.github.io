---
import BaseLayout from '../layouts/BaseLayout.astro'
import { Image } from 'astro:assets'
import 'dotenv/config'
import star from '../images/star.png'

const requestBody = `
{
  user(login: "clarkio") {
    pinnedItems(first: 6, types: REPOSITORY) {
      edges {
        node {
            ...on Repository {
              id
            name
            description
            stargazers {
              totalCount
            }
            url
            languages(first: 3) {
              edges {
                node {
                  name
                }
              }
            }
          }
        }
      }
    }
  }
}
`

let projects = []
if (!process.env.GH_ACCESS_TOKEN || process.env.GH_ACCESS_TOKEN === '') {
  console.error(
    'No GitHub access token found. Please set GH_ACCESS_TOKEN in your environment variables.'
  )
} else {
  try {
    const response = await fetch('https://api.github.com/graphql', {
      method: 'POST',
      headers: { authorization: `Bearer ${process.env.GH_ACCESS_TOKEN}` },
      body: JSON.stringify({
        query: requestBody
      })
    }).then((res) => res.json())
    projects = response.data?.user?.pinnedItems?.edges ?? []
  } catch (e) {
    console.error('Failed to fetch projects', e)
  }
}
---

<BaseLayout
  title='Projects'
  description="Clarkio's GitHub repositories for all of his projects"
  keywords='clarkio, projects, github, repository, repositories'
>
  <header class="page-header">
    <h1>Projects</h1>
    <p class="subtitle">
      A collection of my open source work. Check out <a href='https://github.com/clarkio' target="_blank">GitHub</a> for more.
    </p>
  </header>

  <div class='project-grid'>
    <article class="project-card">
      <div class="card-content">
        <h2><a href='/wos-helper'>Words on Stream Helper</a></h2>
        <p class="description">
          A tool to help when playing <a href='https://wos.gg/'>Words on Stream</a> with your community. 
          It provides visibility to correctly guessed words and highlights the biggest word for the round.
        </p>
      </div>
      <div class='card-footer'>
        <div class="stats">
          <Image src={star} alt='stargazers' width={16} height={16} />
          <span>-</span>
        </div>
        <div class='tags'>
          <span>JavaScript</span>
          <span>WebSockets</span>
        </div>
      </div>
    </article>

    <article class="project-card">
      <div class="card-content">
        <h2>
          <a href='https://github.com/clarkio/discord-wordle-bot' target='_blank'>
            Discord Wordle Bot
          </a>
        </h2>
        <p class="description">
          Play Wordle with your community in your Discord server. 
          Supports storing results in a libSQL database and providing a leaderboard API.
        </p>
      </div>
      <div class='card-footer'>
        <div class="stats">
          <Image src={star} alt='stargazers' width={16} height={16} />
          <span>-</span>
        </div>
        <div class='tags'>
          <span>TypeScript</span>
          <span>Bun.js</span>
          <span>SQLite</span>
        </div>
      </div>
    </article>

    {
      projects.map(
        ({ node: { url, name, stargazers, description, languages } }) => (
          <article class="project-card">
            <div class="card-content">
              <h2>
                <a href={url} target='_blank'>
                  {name}
                </a>
              </h2>
              <p class="description">{description}</p>
            </div>
            <div class='card-footer'>
              <div class="stats">
                <Image src={star} alt='stargazers' width={16} height={16} />
                <span>{stargazers.totalCount}</span>
              </div>
              {languages && (
                <div class='tags'>
                  {languages.edges.map(({ node: { name } }) => (
                    <span>{name}</span>
                  ))}
                </div>
              )}
            </div>
          </article>
        )
      )
    }
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-muted);
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding-bottom: 4rem;
  }

  .project-card {
    background: var(--code-bg);
    border-radius: 16px;
    border: 1px solid transparent;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.2s ease, border-color 0.2s ease;
    overflow: hidden;
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
  }

  .card-content {
    padding: 1.5rem;
  }

  .project-card h2 {
    margin-top: 0;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .project-card h2 a {
    color: var(--text-color);
    text-decoration: none;
  }

  .project-card h2 a:hover {
    color: var(--primary-color);
  }

  .description {
    color: var(--text-muted);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .card-footer {
    padding: 1rem 1.5rem;
    background: rgba(0, 0, 0, 0.03);
    border-top: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  :global(.dark) .card-footer {
    background: rgba(255, 255, 255, 0.03);
  }

  .stats {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-muted);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .tags span {
    font-size: 0.75rem;
    background: var(--bg-color);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    color: var(--text-muted);
    border: 1px solid var(--border-color);
  }
</style>
