---
import readingTime from 'reading-time'

import BaseLayout from '../../layouts/BaseLayout.astro'
import Paginator from '../../components/Paginator.astro'

export async function getStaticPaths({ paginate, rss }) {
  // const oldPosts = await Astro.glob('../old-posts/*.md');
  const allPosts = await Astro.glob('./**/*.md')
  // const allPosts = oldPosts.concat(newPosts);
  const sortedPosts = allPosts.sort(
    (a, b) =>
      new Date(b.frontmatter.publishDate).valueOf() -
      new Date(a.frontmatter.publishDate).valueOf()
  )
  return paginate(sortedPosts, { pageSize: 10 })
}

const { page } = Astro.props
---

<BaseLayout
  title="Blog Posts"
  description="Recently written posts on various topics and interests."
  keywords="clarkio, blog posts, post, posts, blog, writings, articles"
>
  <header class="page-header">
    <h1>Blog</h1>
    <p class="subtitle">Thoughts, tutorials, and insights.</p>
  </header>

  <div class="articles-grid">
    {
      page.data.map(
        ({
          rawContent,
          url,
          frontmatter: { title, publishDate, description }
        }) => {
          if (url.includes('old-posts')) {
            const oldUrl = url.replace('/blog/old-posts/', '').replace('/blog/')
            const year = oldUrl.slice(0, 4)
            const month = oldUrl.slice(5, 7)
            const day = oldUrl.slice(8, 10)
            const name = oldUrl.slice(11)
            url = `/${year}/${month}/${day}/${name}`
          }
          return (
            <article class="post-card">
              <a href={url} class="card-link">
                <div class="card-content">
                  <header>
                    <h2>{title}</h2>
                    <div class="meta">
                      <time datetime={publishDate}>{publishDate}</time>
                      <span class="separator">â€¢</span>
                      <span class="reading-time">{readingTime(rawContent()).text}</span>
                    </div>
                  </header>
                  <p class="description">{description}</p>
                </div>
              </a>
            </article>
          )
        }
      )
    }
  </div>
  
  <div class="pagination-wrapper">
    <Paginator page={page} />
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-muted);
  }

  .articles-grid {
    display: grid;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .post-card {
    background: var(--code-bg);
    border-radius: 16px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: 1px solid transparent;
    overflow: hidden;
  }

  .post-card:hover {
    transform: translateY(-2px);
    border-color: var(--primary-color);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .card-link:hover {
    color: inherit;
  }

  .card-content {
    padding: 2rem;
  }

  .post-card h2 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.75rem;
    color: var(--text-color);
    transition: color 0.2s ease;
  }

  .post-card:hover h2 {
    color: var(--primary-color);
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .separator {
    color: var(--border-color);
  }

  .description {
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .pagination-wrapper {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
  }
</style>
