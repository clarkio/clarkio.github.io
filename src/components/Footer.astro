---
import rss from "../images/rss.png";
import twitter from "../images/twitter.png";
import twitch from "../images/twitch.png";
import github from "../images/github.png";
import youtube from "../images/youtube.png";
import instagram from "../images/instagram.png";
const year = new Date().getFullYear();
---

<footer>
  <span>Â© {year} Brian Clark</span>
  <div class="socials">
    <a href="/rss.xml">
      <img src={rss} alt="rss feed" />
    </a>
    <a
      href="https://twitter.com/_clarkio"
      target="_blank"
      rel="noreferrer noopener"
    >
      <img src={twitter} alt="twitter profile" />
    </a>
    <a
      href="https://www.twitch.tv/clarkio"
      target="_blank"
      rel="noreferrer noopener"
    >
      <img src={twitch} alt="twitch channel" />
    </a>

    <a
      href="https://github.com/clarkio"
      target="_blank"
      rel="noreferrer noopener"
    >
      <img src={github} alt="github profile" />
    </a>

    <a
      href="https://www.youtube.com/c/Clarkio"
      target="_blank"
      rel="noreferrer noopener"
    >
      <img src={youtube} alt="youtube channel" />
    </a>

    <a
      href="https://instagram.com/_clarkio"
      target="_blank"
      rel="noreferrer noopener"
    >
      <img src={instagram} alt="instagram profile" />
    </a>
  </div>
  <p>
    <a href="https://astro.build" target="_blank" rel="noreferrer noopener"
      >ðŸš€ Built with Astro
    </a>
    <br>
    <a href="https://dhanishgajjar.com" target="_blank" rel="noreferrer noopener">Designed by Dhanish Gajjar</a>
  </p>
</footer>

<style>
  footer {
    align-items: center;
    display: flex;
    flex-direction: column;
    margin: 4rem 0;
  }

  span,
  p {
    font-size: clamp(0.75rem, 2vw, 1rem);
  }

  span,
  p a {
    color: #000;
  }

  .socials {
    place-items: center;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1rem;
    margin: 1rem 0;
  }

  .socials img {
    height: 24px;
  }

  @media (min-width: 700px) {
    footer {
      justify-content: space-between;
      flex-direction: row;
    }

    .socials img {
      height: 36px;
    }
  }
</style>
