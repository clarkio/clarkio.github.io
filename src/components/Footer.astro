---
const year = new Date().getFullYear()
import Rss from './Icons/Rss.astro'
import Xitter from './Icons/Xitter.astro'
import Twitch from './Icons/Twitch.astro'
import Github from './Icons/Github.astro'
import Youtube from './Icons/Youtube.astro'
import Instagram from './Icons/Instagram.astro'
import Tiktok from './Icons/Tiktok.astro'
---

<footer>
  <div class="footer-content">
    <div class="copyright">
      <a href="https://astro.build" target="_blank" rel="noreferrer noopener" class="built-with">
        ðŸš€ Built with Astro
      </a>
      <span class="separator">|</span>
      <span>Â© {year} Brian Clark</span>
    </div>

    <div class="socials">
      <a href="/rss.xml" aria-label="RSS Feed"><Rss /></a>
      <a href="https://twitter.com/_clarkio" target="_blank" rel="noreferrer noopener" aria-label="Twitter"><Xitter /></a>
      <a href="https://www.twitch.tv/clarkio" target="_blank" rel="noreferrer noopener" aria-label="Twitch"><Twitch /></a>
      <a href="https://github.com/clarkio" target="_blank" rel="noreferrer noopener" aria-label="GitHub"><Github /></a>
      <a href="https://www.youtube.com/c/Clarkio" target="_blank" rel="noreferrer noopener" aria-label="YouTube"><Youtube /></a>
      <a href="https://instagram.com/_clarkio" target="_blank" rel="noreferrer noopener" aria-label="Instagram"><Instagram /></a>
      <a href="https://tiktok.com/@clarkio" target="_blank" rel="noreferrer noopener" aria-label="TikTok"><Tiktok /></a>
    </div>

    <a href="https://dhanishgajjar.com" target="_blank" rel="noreferrer noopener" class="dg">DG</a>
  </div>
</footer>

<style>
  footer {
    padding: 4rem 0;
    margin-top: 4rem;
    border-top: 1px solid var(--border-color);
  }

  .footer-content {
    max-width: 1024px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 2rem;
  }

  .copyright {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .built-with {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .built-with:hover {
    color: var(--primary-color);
  }

  .separator {
    color: var(--border-color);
  }

  .socials {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .socials a {
    color: var(--text-muted);
    transition: color 0.2s ease, transform 0.2s ease;
    display: flex;
    align-items: center;
  }

  .socials a:hover {
    color: var(--primary-color);
    transform: translateY(-2px);
  }

  .dg {
    justify-self: end;
    font-size: 0.875rem;
    color: var(--text-muted);
    text-decoration: none;
    opacity: 0.5;
    transition: opacity 0.2s ease;
  }

  .dg:hover {
    opacity: 1;
    color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      justify-items: center;
      gap: 2rem;
      text-align: center;
    }

    .copyright {
      flex-direction: column;
      gap: 0.25rem;
    }

    .separator {
      display: none;
    }

    .dg {
      justify-self: center;
    }
  }
</style>
