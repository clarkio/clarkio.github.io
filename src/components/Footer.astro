  }

  :global(.dark) span,
  :global(.dark) p a,
  :global(.dark) a,
  :global(.dark) a:visited {
    color: rgb(255 255 255 / 0.75);
  }

  .socials {
    justify-content: center;
    display: flex;
    flex-wrap: wrap;
    margin: 1rem 0;
  }

