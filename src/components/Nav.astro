---
const currentPath = Astro.url.pathname
import Icons from './Icons/Logo.astro'
import ThemeToggle from './Icons/ThemeToggle.astro'
---

<header>
  <a href="/">
    <Icons name="Logo" />
  </a>
  <nav>
    <ul>
      <li>
        <a class={currentPath === '/blog/' ? 'active' : ''} href="/blog/"
          >Blog</a
        >
      </li>

      <li>
        <a
          class={currentPath === '/projects/' ? 'active' : ''}
          href="/projects/">Projects</a
        >
      </li>

      <li>
        <a class={currentPath === '/about/' ? 'active' : ''} href="/about/"
          >About</a
        >
      </li>

      <li>
        <a class={currentPath === '/uses/' ? 'active' : ''} href="/uses/"
          >Uses</a
        >
      </li>

      <li>
        <a
          class={currentPath === '/stream-tools/' ? 'active' : ''}
          href="/stream-tools/">Stream tools</a
        >
      </li>
    </ul>
  </nav>
  <ThemeToggle />
</header>

<style>
  header {
    display: grid;
    gap: 1rem;
    grid-template-columns: 48px 1fr auto;
  }

  @media (max-width: 550px) {
    nav {
      display: none;
    }
  }

  nav ul {
    display: flex;
    list-style: none;
    justify-content: end;
    padding: 0;
  }

  nav li a,
  nav li a:visited {
    display: inline-block;
    color: rgb(0 0 255 / 50%);
    font-weight: 600;
    margin-left: 1rem;
    text-decoration: none;
  }

  :global(.dark) a,
  :global(.dark) a:visited {
    color: rgb(255 255 255 / 0.5);
  }

  nav li a:hover,
  nav li a:focus,
  nav li a.active {
    color: rgb(0 0 255 / 1);
    text-decoration: underline;
  }

  :global(.dark) a:hover,
  :global(.dark) .active {
    color: rgb(255 255 255 / 0.75);
  }
</style>
