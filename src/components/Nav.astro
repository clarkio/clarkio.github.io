---
const currentPath = Astro.url.pathname
import Logo from './Icons/Logo.astro'
import ThemeToggle from './Icons/ThemeToggle.astro'
---

<header class="mainNav">
  <div class="nav-content">
    <a href="/" class="logo-link">
      <div class="logo">
        <Logo name="Logo" />
      </div>
    </a>
    
    <button aria-controls="menu" aria-expanded="false" class="menu-toggle">
      <span class="sr-only">Menu</span>
      <div class="hamburger"></div>
    </button>

    <nav>
      <ul>
        <li>
          <a class={currentPath === '/blog/' ? 'active' : ''} href="/blog/">Blog</a>
        </li>
        <li>
          <a class={currentPath === '/projects/' ? 'active' : ''} href="/projects/">Projects</a>
        </li>
        <li>
          <a class={currentPath === '/about/' ? 'active' : ''} href="/about/">About</a>
        </li>
        <li>
          <a class={currentPath === '/uses/' ? 'active' : ''} href="/uses/">Uses</a>
        </li>
        <li>
          <a class={currentPath === '/stream-tools/' ? 'active' : ''} href="/stream-tools/">Stream tools</a>
        </li>
      </ul>
    </nav>
    
    <div class="theme-toggle-wrapper">
      <ThemeToggle />
    </div>
  </div>
</header>

<style>
  .mainNav {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  :global(.dark) .mainNav {
    background-color: rgba(15, 23, 42, 0.8);
  }

  .nav-content {
    max-width: 1024px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .logo-link {
    display: flex;
    align-items: center;
    color: var(--text-color);
  }

  .logo {
    width: 40px;
    height: 40px;
  }

  nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  nav a {
    font-weight: 500;
    color: var(--text-muted);
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  nav a:hover,
  nav a.active {
    color: var(--primary-color);
    text-decoration: none;
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger {
    width: 24px;
    height: 2px;
    background: var(--text-color);
    position: relative;
    transition: all 0.3s ease;
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    width: 24px;
    height: 2px;
    background: var(--text-color);
    left: 0;
    transition: all 0.3s ease;
  }

  .hamburger::before { top: -8px; }
  .hamburger::after { top: 8px; }

  button[aria-expanded="true"] .hamburger {
    background: transparent;
  }

  button[aria-expanded="true"] .hamburger::before {
    top: 0;
    transform: rotate(45deg);
  }

  button[aria-expanded="true"] .hamburger::after {
    top: 0;
    transform: rotate(-45deg);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
      z-index: 101;
    }

    nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: var(--bg-color);
      padding: 5rem 2rem;
      transform: translateX(100%);
      transition: transform 0.3s ease-in-out;
      z-index: 99;
    }

    nav ul {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }

    nav a {
      font-size: 1.5rem;
    }

    button[aria-expanded="true"] + nav {
      transform: translateX(0);
    }
    
    /* Fix for the sibling selector logic in script */
    .nav-content:has(button[aria-expanded="true"]) nav {
      transform: translateX(0);
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const menuButton = document.querySelector('.menu-toggle');
    const nav = document.querySelector('nav');

    if (menuButton && nav) {
      menuButton.addEventListener('click', () => {
        const expanded = menuButton.getAttribute('aria-expanded') === 'true';
        menuButton.setAttribute('aria-expanded', !expanded);
        
        // Toggle class on nav for mobile menu
        if (!expanded) {
          nav.style.transform = 'translateX(0)';
          document.body.style.overflow = 'hidden';
        } else {
          nav.style.transform = 'translateX(100%)';
          document.body.style.overflow = '';
        }
      });
    }
  });
</script>
