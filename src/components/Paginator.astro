---
const { page } = Astro.props
---

<div class="pagination">
  {
    page.url.prev && (
      <a href={page.url.prev} title="Go to Previous">
        &larr; Prev
      </a>
    )
  }
  {
    page.url.next && (
      <a href={page.url.next} title="Go to Next">
        Next &rarr;
      </a>
    )
  }
</div>

<style>
  .pagination a {
    display: inline-block;
    padding: 1rem 1rem 1rem 0;
    color: #000;
    font-weight: 600;
  }

  ::global(.dark) .pagination a {
    color: rgb(255 255 255 / 0.75);
  }
</style>
